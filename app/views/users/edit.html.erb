<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="login.css" type= "text/css" rel="stylesheet">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<h1>Editing User </h1>
<%= form_for @user do |f| %>
    <div class="form-group">
                  <label> Fullname: </label>
    <%= f.text_field :fullname, placeholder: 'Enter Your Name',:class => "form-control" %>
    </div>
    <div class="form-group">
    <label> Email: </label>
    <%= f.email_field :email, placeholder: 'Enter Your Email',:class => "form-control" %>
    </div>
    <div class="form-group">
    <label> Password: </label>
    <%= f.password_field :password, placeholder: 'Enter Your password',:class => "form-control" %>
    </div>
    <%= f.submit "Update Thing",:class => "btn btn-dark" %>
<% end %>