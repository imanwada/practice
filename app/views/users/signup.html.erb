<body>



<div class="main">
         <div class="col-md-6 col-sm-12">
         
            <div class="login-form">
            <% if @user != nil and @user.errors.any? %>
            <% @user.errors.full_messages.each do |msg| %>
                <div style="color:red"><%= msg %></div>
            <% end %>
        <% end %>
        
<%= form_for :user, url:register_users_path do |f| %>
    <div class="form-group">
                  <label> Fullname: </label>
    <%= f.text_field :fullname, placeholder: 'Enter Your Name',:class => "form-control" %>
    </div>
    <div class="form-group">
    <label> Email: </label>
    <%= f.email_field :email, placeholder: 'Enter Your Email',:class => "form-control" %>
    </div>
    <div class="form-group">
    <label> Password: </label>
    <%= f.password_field :password, placeholder: 'Enter Your password',:class => "form-control" %>
    </div>
    <%= f.submit "Create Account",:class => "btn btn-dark" %>
<% end %>
</div>
</div>
</div>
</body>