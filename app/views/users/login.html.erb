<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="login.css" type= "text/css" rel="stylesheet">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<div class="sidenav">
         <div class="login-main-text">
            <h1>BaseCamp</h1>
            <br><h2> Login Page</h2>
            <p>Login or Register from here to access.</p>
         </div>
      </div>
<body>



<div class="main">
         <div class="col-md-6 col-sm-12">
         
            <div class="login-form">
            <% flash.each do |type, msg| %>
                <% if type == 'success' %>
                    <div style="color:green"><%= msg %></div>
                <% elsif type == 'error' %>
                    <div style="color:red"><%= msg %></div>
                <% else %>
                    <div class="alert alert-info"><%= msg %></div>
                <% end %>
            <% end %>
            
            <% if @user != nil and @user.errors.any? %>
                <% @user.errors.full_messages.each do |msg| %>
                    <div style="color:red"><%= msg %></div>
                <% end %>
            <% end %>
               
               <%= form_for :user, url:login_users_path do |f| %>
                  <div class="form-group">
                  <label> Username: </label>
                      <%= f.email_field :email, placeholder: 'Enter your username',:class => "form-control"%>
                </div>
                <div class="form-group">
                <label> Password: </label>
                    <%= f.password_field :password, placeholder: 'Enter your password',:class => "form-control" %>
                </div>
                   
                    <%= f.submit "Login",:class => "btn btn-dark" %>
                    <%= link_to "Sign Up", register_users_path, :class => "btn btn-dark" %>
                    
                <% end %>
                     
            
                  
            </div>
         </div>
</div>

</body>   